---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Story from '../components/Story.astro';
import Form from '../components/Form.svelte';
import World from '../components/World.astro';
import { data } from '../data/data';
---

<Layout title="Diablo Apocalypsis | Registro">
	<Hero 
		title={data.hero.title}
		copy={data.hero.copy}
		cta_link={data.hero.ctaLink}
		cta_copy={data.hero.ctaCopy}
	/>
	<Story 
		title={data.story.title}
		copy={data.story.copy}
		trailer_link={data.story.trailerLink}
		subtitle={data.story.subtitle}
		copyTwo={data.story.copy2}
	/>
	<World 
		title={data.world.title}
		copy={data.world.copy}
		scenes={data.world.scenes}
	/>
	<Form 
		title={data.form.title}
	/>
</Layout>

