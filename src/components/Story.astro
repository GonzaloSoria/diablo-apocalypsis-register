---
const { title, copy, trailer_link, trailer_copy, subtitle, copyTwo } = Astro.props;
---

<section class="story">
    <div class="container 2xl:container py-10 xl:py-56 px-5 md:px-0 mx-auto">
        <div class="grid grid-cols-1 xl:grid-cols-3">
            <div class="flex flex-col justify-center">
                <h2 class="story-subtitle font-old-fenris text-subtitle-sm md:text-subtitle-md lg:text-subtitle-lg text-first-color text-center uppercase font-extrabold mb-10">{title}</h2>
                <p class="story-copy text-first-color text-copy-sm md:text-copy-md text-center">{copy}</p>
            </div>
            <div class="mx-auto col-span-2">
                <a href={trailer_link} target="_blank">
                    <img src="../assets/img/trailer-img.png" alt="trailer">
                </a>
                <h2 class="story-subtitle font-old-fenris text-copy-sm md:text-copy-md text-first-color text-center uppercase font-extrabold mt-5 mb-10">{trailer_copy}</h2>
            </div>
        </div>
    </div>
</section>

<section class="story-2">
    <div class="container py-10 px-5 md:px-0 mx-auto">
        <div class="grid grid-cols-1 xl:grid-cols-3">
            <div class="mx-auto col-span-2 order-2 xl:order-1">
                <video autoplay loop muted playsinline>
                    <source src="https://blz-contentstack-assets.akamaized.net/v3/assets/blt9c12f249ac15c7ec/bltb6e269455cd58b2e/62a06a53d1dfb243261cabb4/fenris-story-bg-loop-ultra.mp4" type="video/mp4">
                </video>
            </div>
            <div class="flex flex-col justify-center order-1 xl:order-2">
                <h2 class="story-subtitle font-old-fenris text-subtitle-sm md:text-subtitle-md lg:text-subtitle-lg text-first-color text-center uppercase font-extrabold mb-10">{subtitle}</h2>
                <p class="story-copy text-first-color text-copy-sm md:text-copy-md text-center">{copyTwo}</p>
            </div>
        </div>
    </div>
    <img src="../assets/img/divider.png" alt="Divider">
</section>

<style>
    .story {
        background-image: url('../assets/img/story-bg.png');
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
    }

    .story-subtitle {
        text-shadow: 0px 3px 6px #000000;
    }
    
    .story-copy {
        text-shadow: 0px 3px 6px #000000;
    }

    .story-2 img {
        transform: rotate(180deg);
    }
</style>