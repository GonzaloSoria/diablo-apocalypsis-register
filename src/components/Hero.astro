---
const { title, subtitle, copy, cta_link, cta_copy } = Astro.props;
---

<section class="hero bg-fixed pt-20">
    <div class="container mx-auto pt-10">
        <div class="flex flex-col justify-content items-center pt-56 pb-30 mt-40">
            <p class="text-white hero-subtitle" id="hero-subtitle">{subtitle}</p>
            <h1 class="mb-5 text-center hero-title" id="hero-title">{title}</h1>
            <p class="hero-copy" id="hero-copy">{copy}</p>
            <a href={cta_link} class="register" id="cta"><span>{cta_copy}</span></a>
        </div>
    </div>
    <img src="./assets/img/divider.png" alt="" class="mt-20">
</section>


<style>
    .hero {
        background-image: url('https://images5.alphacoders.com/112/1126803.jpg');
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
    }

    .hero-title, .hero-copy{
        color: var(--text-first-color);
        text-shadow: 0px 3px 6px #000000;
        text-transform: uppercase;
    }

    .hero-subtitle {
        text-shadow: 0px 3px 6px #000000;
    }

    .cta {
        width: 200px;
        padding: 15px;
        background: var(--background-second-color);
        text-align: center;
        color: var(--text-second-color);
        font-size: 20px;
        font-weight: 800;
        text-transform: uppercase;
    }

    .register {
        background: url('../assets/img/cta-trailer.png') no-repeat;
        background-position: 0 0;
        display: block;
        height: 133px;
        float: left;
        margin-top: 45px;
        margin-left: 11px;
        position: relative;
        width: 315px;
        color: #ad835a;
    }

    .register span {
        color: #f3e6d0;
        font-family: var(--title-font-family);
        left: 113px;
        position: relative;
        top: 57px;
        text-transform: uppercase;
    }

    .register:hover {
        background-position: 0 -132px;
    }
</style>