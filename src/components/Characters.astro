---
const { title, copy } = Astro.props;
---

<section class="character relative py-56">
    <video autoplay loop muted playsinline class="characters-video-bg">
        <source src="https://blz-contentstack-assets.akamaized.net/v3/assets/blt77f4425de611b362/blt9822bd1cdcc29a0f/611a8c5219b5613c6defc2b0/di_masthead_desktop-2600.mp4" type="video/mp4">
    </video>
    <div class="container mx-auto character-text-container">
        <h2 class="character-subtitle text-center mb-5" data-aos="fade" data-aos-duration="1000">{title}</h2>
        <p class="character-copy text-center" data-aos="fade data" data-aos-duration="1000" data-aos-delay="300">{copy}</p>
    </div>
</section>

<style>
    .character-text-container {
        position: absolute;
        top: 100%;
        transform: translate(12%, -50%);
    }

    .characters-video-bg {
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
    } 

    .character-subtitle {
        color: var(--text-first-color);
        font-size: 60px;
    }

    .character-copy {
        color: #CCCCCC;
    }

    .character-grids {
        color: var(--text-first-color);
        text-align: center;
    }

    .character-grids p {
        font-size: 15px;
    }
</style>